// 골프 코스 관리 파일
// 실제 골프장 코스 정보만 포함

export interface GolfCourse {
  id: string;
  name: string;
  address?: string;
  phone?: string;
}

// 기본 골프 코스 목록 (예시)
// 실제로는 tour_products 테이블에서 동적으로 가져와야 함
export const GOLF_COURSES: string[] = [
  "파인힐스 CC - 파인 코스",
  "파인힐스 CC - 레이크 코스", 
  "파인힐스 CC - 힐스 코스"
];

// 데이터베이스에서 코스 목록을 가져오는 함수
export async function fetchGolfCourses(): Promise<GolfCourse[]> {
  // TODO: tour_products 테이블에서 실제 코스 정보 조회
  return GOLF_COURSES.map((name, index) => ({
    id: `course-${index}`,
    name
  }));
}
